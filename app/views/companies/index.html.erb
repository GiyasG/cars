<%= render 'layouts/search' %>

<h1>Companies</h1>
<div class='row'>

    <% @companies.each do |company| %>
    <%= link_to company do%>
         <%= image_tag url_for(:controller => "logos", :action => "show_company", :company_id=>company.id,
          :id=>company.logos[0][:id]), class: "img-thumbnail col-md-1"%>
         <%= content_tag :h4, company.name, class: "col-md-11"%>
         <div class="col-md-11 text-justify">
           <%= simple_format(company.description, class: "text-justify")%>
         </div>
         <% end %>

     <% if user_signed_in? %>
       <% if current_user.try(:vip?) %>
       <div class="col-md-6 putinline">
         <%= link_to 'Edit', edit_company_path(company), class: "btn btn-warning" %>
         <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
         <%= link_to 'New Company', new_company_path, class: "btn btn-success" %>
       </div>
       <% end %>
     <% end %>
    <% end %>
  </div>
