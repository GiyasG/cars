<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :contactname %><br>
    <%= f.text_field :contactname %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :postcode %><br>
    <%= f.text_field :postcode %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :homepage %><br>
    <%= f.text_field :homepage %>
  </div>

  <%= f.fields_for :logos, @logo do |ff| %>
    <% if (ff.object.company_id).present? %>
    <h2>Edit logo</h2>
      <%= image_tag url_for(:controller => "logos", :action => "show",
                            :company_id=>ff.object.company_id, :id=>ff.object.id),
                            class: "col-md-2 img-thumbnail"%>
      <div class="field">
        <p><%= ff.object.filename %></p>
        <%= ff.file_field :file %><br>
      </div>
      <div class="field">
          <%= ff.label :description %>
          <%= ff.text_field :description, :value => ff.object.description %>
      </div>

    <% else %>

    <h2>Add logo</h2>
        <div class="field">
          <%= ff.file_field :file %><br>
        </div>
        <div class="field">
          <%= ff.label :description %>
          <%= ff.text_field :description %>
        </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
