  <div class='row'>
    <%= content_tag :h4, "#{@carpart.name}", class: "col-md-12"%>
    <%= image_tag url_for(:controller => "photos", :action => "show_carpart", :carpart_id=>@carpart.id), class: "col-md-4"%>

  <div class='col-md-8'>
    <%= content_tag :table, class: "table well-br" do%>

    <%= content_tag :tr do%>
    <%= content_tag :th, "Code:" %>
    <%= content_tag :td, "#{@carpart.code}" %>
    <%= content_tag :th, "Description:" %>
    <%= content_tag :td, "#{@carpart.description}" %>
    <% end%>

    <%= content_tag :tr do%>
    <%= content_tag :th, "Price:" %>
    <%= content_tag :td, "#{@carpart.price}" %>
    <% end%>

    <%= content_tag :tr do%>
    <%= content_tag :th, "Stock:" %>
    <%= content_tag :td, "#{@carpart.stock}" %>
    <% end%>

<% end%>
<% content_tag :h3, "Characteristics"%>
<%= content_tag :table, class: "table well-br" do%>
<%= content_tag :tr do%>
<% (0...(@carpart.details[0]).size()).each do |i| %>
    <% @carpart.details[0][i].each do |key, value| %>
      <%= content_tag :th, "#{key}:" %>
      <%= content_tag :td, "#{value}"  %>
    <% end %>
  <% end %>
<% end %>
<% end %>

</div>

