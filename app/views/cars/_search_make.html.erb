<label class="col-md-6">Select make</label>
<% if @makes.present? %>
  <%= select_tag 'make', options_for_select(@makes, 'make'), prompt: "Choose make", disabled: false, class: "col-md-6"  %>
<% else %>
  <%= select_tag "make", "<option>Not found</option>".html_safe, disabled: true, class: "col-md-6" %>
<% end %>
